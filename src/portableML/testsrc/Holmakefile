	$(protect $(HOLDIR)/tools/unicode-grep/unicode-grep) --nolinelen $(protect $(HOLDIR)/src) $(protect $(HOLDIR)/help/Docfiles)
	$(protect $(HOLDIR)/tools/unicode-grep/unicode-grep) --nolinelen -u $(protect $(HOLDIR)/examples)

endif
