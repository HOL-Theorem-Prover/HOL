	$(protect $(HOLDIR)/bin/buildheap) -o $@ $(OBJNAMES)
endif

all: ltl2omega.exe selftest.exe

ltl2omega.exe: ltl2omega.uo
	$(HOLMOSMLC) -o $@ $<

selftest.exe: ltl2omega.exe
	./ltl2omega.exe

.PHOHY: all
